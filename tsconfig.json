{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "rootDir": "packages",
    "outDir": "build",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "build",
    "declarationMap": false,
    "sourceMap": false,
    "inlineSources": false,
    "removeComments": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"],
    "strictNullChecks": false,
    "types": ["jest", "node"],
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@gusok/dev/*": ["packages/dev/src/*"],
      "@gusok/utils/*": ["packages/utils/src/*"]
    }
  },
  "include": ["packages/*/src"],
  "exclude": ["packages/*/src/__test__"]
}
